<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@android:style/Theme.Dialog"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/primarycolor_shadow_forppopup">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Update profile picture"
                android:textSize="14dp"
                android:background="@drawable/rectangle_background_primarycolor"
                android:id="@+id/header_popup"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/header_popup"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:text="Chose Photo"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    android:drawablePadding="20dp"
                    android:background="@drawable/primarycolor_shadow_forppopup"
                    android:gravity="center_vertical"
                    android:id="@+id/img_gallery"
                    android:drawableLeft="@drawable/ic_menu_gallery"
                    />


                <TextView
                    android:drawableLeft="@drawable/ic_menu_camera"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="20dp"
                    android:text="Photo Click"
                    android:background="@drawable/primarycolor_shadow_forppopup"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/img_camera"
                    />
                <TextView
                    android:drawableLeft="@drawable/ic_remove_img"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="20dp"
                    android:text="Remove"
                    android:background="@drawable/primarycolor_shadow_forppopup"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/img_remove"
                    android:visibility="gone"
                    />


            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/closePopup"
                android:layout_gravity="right|top"
                android:src="@drawable/cross_icon"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </FrameLayout>

</FrameLayout>

