<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/skipText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="@string/skip_text"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fbButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebook_icon" />

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/login_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                    <ImageView
                        android:id="@+id/googleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:src="@drawable/google_icon" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingTop="@dimen/_15sdp">


                    <!--
                                            <RadioGroup
                                                android:id="@+id/radioGrpLogin"
                                                android:layout_marginBottom="@dimen/_5sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical"
                                                android:layout_gravity="center"
                                               >

                                                <RadioButton
                                                    android:checked="true"
                                                    android:id="@+id/radioButtonCustomer"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:buttonTint="@color/white"
                                                    android:text="@string/ascustomer_text"
                                                    android:textColor="@color/white" />
                                                <RadioButton
                                                    android:id="@+id/radioButtonPartner"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:buttonTint="@color/white"
                                                    android:text="@string/aspartner_text"
                                                    android:textColor="@color/white" />

                                            </RadioGroup>
                    -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:weightSum="1">

                        <Button
                            android:layout_weight="0.3"
                            android:id="@+id/tabCustomer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/darkBlueColor"
                            android:text="@string/customer_text"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"/>

                        <Button
                            android:layout_weight="0.3"
                            android:id="@+id/tabPartner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:background="@color/darkBlueColor"
                            android:text="@string/partner_text"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"/>

                        <Button
                            android:textSize="@dimen/_10sdp"
                            android:layout_weight="0.3"
                            android:id="@+id/tabEngineer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:background="@color/darkBlueColor"
                            android:text="@string/engineer_text"
                            android:textAllCaps="false"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:drawableRight="@drawable/message_icon"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/email_mobile_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp" />

                    <EditText
                        android:id="@+id/emailMobileText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/white_circle_background"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:drawableRight="@drawable/password_icon"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/password_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp" />

                    <EditText
                        android:id="@+id/passwordText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/white_circle_background"
                        android:inputType="textPassword"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/forgotPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_Size"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/forgotpassword_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:background="@drawable/white_circle_background"
                        android:text="@string/login_text"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/RegisterButton"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/primarycolor_circle_background"
                        android:text="@string/register_text"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/_5sdp"
                     />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
</ScrollView>
