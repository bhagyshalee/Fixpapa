<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_5sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/problem_setting" />

            <TextView
                android:id="@+id/catNameShow"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/category_name_text"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                />

<!--
            <TextView
                android:layout_weight="0.2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/repair_text"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorPrimary"
                android:gravity="center|left"/>
-->

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginLeft="@dimen/_45sdp"
            android:src="@drawable/back_icon"
            android:layout_gravity="center"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp">

                <TextView
                    android:id="@+id/titleBrands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkGray"
                    android:padding="@dimen/_15sdp"
                    android:text="@string/type_of_product_text"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/productRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleBrands"
                android:orientation="vertical" />
<!--
            <Button
                android:id="@+id/buttonNextProduct"
                android:layout_below="@+id/productRecycler"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/primarycolor_circle_background"
                android:textColor="@color/white"
                android:text="@string/next_text"
                android:layout_marginTop="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textAllCaps="false"/>
-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/buttonNextProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_65sdp"
        android:background="@color/colorPrimary"
        android:text="@string/next_text"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>