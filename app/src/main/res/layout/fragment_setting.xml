<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_text"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:padding="@dimen/_15sdp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/addEngineerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/manageAddressLayout"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/addEngineerText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/help"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableRight="@drawable/ic_right_arrow_24dp"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/add_engineer_text" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/deleteEngineerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addEngineerLayout"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/deleteEngineerText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/terms_condition"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableRight="@drawable/ic_right_arrow_24dp"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/block_engineer_text" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/updateEngineerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deleteEngineerLayout"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_210sdp">

                        <TextView
                            android:id="@+id/updateEngineerText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/about_us"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableRight="@drawable/ic_right_arrow_24dp"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/update_engineer_text" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/black" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>