<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:padding="@dimen/_10sdp"
    android:id="@+id/jobsDetailLayout">

    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bookingTitle"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:text="@string/all_category_text"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/bookingissue"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="@string/all_category_text"
            android:ellipsize="end"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/bookingDate"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:text="@string/all_category_text"
            android:ellipsize="end"
            android:textSize="@dimen/_12sdp"/>
        <TextView
            android:id="@+id/bookingStatus"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:text="@string/all_category_text"
            android:ellipsize="end"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.6"
    android:orientation="vertical">
    <RatingBar
        android:id="@+id/ratingJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_weight="0.3"
        android:isIndicator="true"
        android:paddingTop="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_gravity="center|bottom"
        style="?android:attr/ratingBarStyleSmall"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/bookingPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:layout_weight="0.3"
        android:padding="@dimen/_5sdp"
        android:text="@string/all_category_text"
        android:textColor="@color/red"
        android:textSize="@dimen/_12sdp"
        />
</LinearLayout>
</LinearLayout>